!!! 
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Brails"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"

  %body.textsize-1625
    .wrap
      .navbar.navbar-default
        .navbar-header
          %a.navbar-brand(href="#") Brails
        .navbar-collapse.collapse
          - if user_signed_in? && current_user.roles == 'admin'
            %ul.nav.navbar-nav
              %li
                = link_to "Levels", admin_levels_path
              %li
                = link_to "Users", admin_users_path
              %li
                = link_to "Feedbacks", admin_feedbacks_path
          - if user_signed_in?
            %ul.nav.navbar-nav
              %li
                = link_to "Levels", levels_path
              %li
                - if current_user.profile.nil?
                  = link_to "Profile", new_user_profile_path(current_user)
                - else
                  = link_to "Profile", user_profile_path(current_user, current_user.profile)
            %ul.nav.navbar-nav.navbar-right
              %li
                = link_to "Sign out", destroy_user_session_path, method: :delete
      .control-bar
        .increase-font.change-font-size{:data => {:size => "up"}}
        .default-font-size.change-font-size{:data => {:size => "reset"}}
        .decrease-font.change-font-size{:data => {:size => "down"}}
        .switch-color.white{:data => {:color => "white"}}
        .switch-color.yellow{:data => {:color => "yellow"}}
        .switch-color.orange{:data => {:color => "orange"}}
        .switch-color.black{:data => {:color => "black"}}

      .container
        .row
          .span12
            = bootstrap_flash
            = yield
            
        #container
          %h5
            &copy; 
            %a Josh Software 2013
